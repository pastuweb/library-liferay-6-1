<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>view-books-mylibrary</portlet-name>
		<display-name>My Library - Elenco Libri</display-name>
		<portlet-class>com.appuntivari.mylibrary.portlet.MyLibraryViewBooksPortlet</portlet-class>
		 <init-param>
	      <name>view-jsp</name>
	      <value>/mylibrary-view/viewBooks.jsp</value>
	    </init-param>
	    <init-param>
	      <name>add-process-action-success-action</name>
	      <value>false</value>
	    </init-param>
	    <expiration-cache>0</expiration-cache>
	    <supports>
	      <mime-type>text/html</mime-type>
	    </supports>
	    <resource-bundle>content.Language</resource-bundle>
	    <portlet-info>
	      <title>My Library - Elenco Libri</title>
	      <short-title>My Library - Elenco Libri</short-title>
	      <keywords>My Library - Elenco Libri</keywords>
	    </portlet-info>
	    <security-role-ref>
	      <role-name>administrator</role-name>
	    </security-role-ref>
	    <security-role-ref>
	      <role-name>guest</role-name>
	    </security-role-ref>
	    <security-role-ref>
	      <role-name>power-user</role-name>
	    </security-role-ref>
	    <security-role-ref>
	      <role-name>user</role-name>
	    </security-role-ref>
	  </portlet>
	  
	  <portlet>
	    <portlet-name>mylibrary-gestione</portlet-name>
	    <display-name>My Library - Gestione Libri</display-name>
	    <portlet-class>com.appuntivari.mylibrary.portlet.MyLibraryGestionePortlet</portlet-class>
	    <init-param>
	      <name>view-jsp</name>
	      <value>/mylibrary-gestione/mylibrary.jsp</value>
	    </init-param>
	    <init-param>
	      <name>add-process-action-success-action</name>
	      <value>false</value>
	    </init-param>
	    <expiration-cache>0</expiration-cache>
	    <supports>
	      <mime-type>text/html</mime-type>
	    </supports>
	    <resource-bundle>content.Language</resource-bundle>
	    <portlet-info>
	      <title>My Library - Gestione Libri</title>
	      <short-title>My Library - Gestione Libri</short-title>
	      <keywords>My Library - Gestione Libri</keywords>
	    </portlet-info>
	    <security-role-ref>
	      <role-name>administrator</role-name>
	    </security-role-ref>
	    <security-role-ref>
	      <role-name>guest</role-name>
	    </security-role-ref>
	    <security-role-ref>
	      <role-name>power-user</role-name>
	    </security-role-ref>
	    <security-role-ref>
	      <role-name>user</role-name>
	    </security-role-ref>
	  </portlet>
	  
</portlet-app>